{
  "manifest_version": 3,
  "name": "Hotel & Airbnb Price Comparator",
  "version": "0.1.0",
  "description": "Compare hotel & Airbnb prices side-by-side while browsing.",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "*://*.booking.com/*",
    "*://*.airbnb.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.booking.com/*"],
      "js": ["content_scripts/booking_detector.js"]
    },
    {
      "matches": ["*://*.airbnb.com/*"],
      "js": ["content_scripts/airbnb_detector.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Compare prices"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
